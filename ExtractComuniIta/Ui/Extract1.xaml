<UserControl x:Class="ExtractComuniIta.Ui.Extract1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtractComuniIta.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="92*"/>
            <ColumnDefinition Width="117*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lbxRegion" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="5,5,5,5" SelectionChanged="lbxRegion_SelectionChanged"/>
        <ListBox x:Name="lbxProvincia" Grid.Column="1" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="5,5,5,5" SelectionChanged="lbxProvincia_SelectionChanged"/>
        <ListBox x:Name="lbxComuni" Grid.Column="2" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="5,5,5,5"/>

    </Grid>
</UserControl>
